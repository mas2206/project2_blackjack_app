<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.codeclan.com.blackjackapp.MainActivity">

    <TextView
        android:id="@+id/welcome_message_text"
        android:text="WELCOME MESSAGE"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

    <Button
        android:id="@+id/play_game_button"
        android:text="DEAL CARDS"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:onClick="onPlayGameButtonClick"
        android:layout_below="@+id/welcome_message_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/player1_hand_text"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="157dp"
        android:layout_below="@+id/play_game_button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/player2_hand_text"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/player1_hand_text"
        android:layout_alignRight="@+id/player1_hand_text"
        android:layout_alignEnd="@+id/player1_hand_text" />

    <TextView
        android:id="@+id/result_text"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/player2_hand_text"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
